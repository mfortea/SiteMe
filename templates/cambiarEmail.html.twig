{% extends 'base.html.twig' %}
{% form_theme form 'form_errors.html.twig' %}
{% block titulo %}
	{{ parent() }}
	- Cambiar email
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/micromodal.css') }}"/>
	<link rel="stylesheet" type="text/css" href="{{ asset('css/all.min.css') }}"/>
{% endblock %}
{% block body %}
	<body class="text-center body-login">

		<div class="form-login">
			<img class="mb-4" src="imagenes/logo_letras.png" alt="Logo de SiteMe" height="72"/>
			<h1 class="h3 mb-3 ">Cambiar email</h1>

			{{ form_start(form) }}

			{{ form_label(form.clave) }}
			{{ form_widget(form.clave) }}
			{{ form_errors(form.clave) }}

			{{ form_label(form.nuevoEmail) }}
			{{ form_widget(form.nuevoEmail) }}
			{% for flashMessage in app.session.flashbag.get('error') %}
				<div class="alert alert-danger" role="alert">{{ flashMessage }}</div>
			{% endfor %}
			<div id="error" role="alert"></div>

			<br>

			{{ form_row(form.save) }}

			{{ form_end(form) }}
			<br>
			<button type="button" onclick="window.location.href = '{{ path('ajustes') }}'" class="btn btn-secondary btn-sm">
				<i class="fas fa-arrow-circle-left"></i>
				&nbsp; Volver a Ajustes</button>
			<p class="mt-5 mb-3 text-muted">&copy; SiteMe -
				{{ "now"|date("Y") }}</p>
		</div>

	</body>

{% endblock %}
{% block javascripts %}
	<script src="{{ asset('js/utiles.js') }}"></script>
{% endblock %}
