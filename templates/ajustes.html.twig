{% extends 'base.html.twig' %}

{% block titulo %}{{ parent() }} - Ajustes de {{ app.user.username }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/micromodal.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('css/all.min.css') }}" />
{% endblock %}

{% block body %}
 <noscript>
        <h2>El uso de Javascript es necesario</h2>
    </noscript>
    <body>
        <nav id="menu" class="navbar navbar-expand-md navbar-light fixed-top text-center">
            <a class="navbar-brand" href="{{ path('busqueda') }}"><img alt="Logo de SiteMe" class="p-3" src="imagenes/logo_letras.png" width="200px" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item m-2">
                        <a class="nav-link" href="{{ path('busqueda') }}"><i class="fas fa-search"></i> &nbsp; Búsqueda </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="{{ path('sitios') }}"><i class="fas fa-compass"></i> &nbsp; Mis sitios <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item m-2">
                        <div class="dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i> &nbsp; Mi perfil</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item disabled" href="#">{{ app.user.username }}</a>
                                <a class="dropdown-item" href="{{ path('ajustes') }}"><i class="fas fa-cog"></i> &nbsp; Ajustes de perfil</a>
                                <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> &nbsp; Cerrar sesión</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="separador"></div>
        <div class="container-fluid mt-5 text-center">
            <h1>Ajustes de {{ app.user.username }}</h1>
        </div>
    </body>

    <!-- Ventana modal para errores-->
    <div class="modal micromodal-slide" id="modal" aria-hidden="true">
        <div class="modal__overlay" tabindex="-1">
            <div class="modal__container text-center" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
                <main class="modal__content" id="modal-1-content">
                    <i id="simboloModal"></i>
                    <br><br>
                    <h3 id="cuerpoModal"></h3>
                </main>
                <button class="boton" data-micromodal-close aria-label="Cerrar"><i class="fas fa-times-circle"></i> &nbsp; Cerrar</button>
            </div>
        </div>
    </div>

    <!-- PIE DE LA PÁGINA -->
    <footer class="text-center">
        <p class="mt-5 mb-3 text-muted">&copy; SiteMe {{ "now"|date("Y") }}</p>
    </footer>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/efectosInterfaz.js') }}"></script>
    <script src="https://unpkg.com/micromodal/dist/micromodal.min.js"></script>
{% endblock %}
